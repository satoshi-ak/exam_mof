<h1>閲覧</h1>

<p>

<strong>物件名:</strong>
  <%= @house.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @house.rent %><%="円"%>
</p>

<p>
  <strong>住所:</strong>
  <%= @house.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @house.age %><%="年"%>
</p>

<p class="border">
  <strong>備考:</strong>
  <%= @house.note %>
</p>

<% @house.stations.each do |station|%>

<p>
  <strong>最寄駅</strong>
</p>

<p>
  <strong>路線名</strong>
  <%= station.route %>
</p>

<p>
  <strong>駅名</strong>
  <%= station.station_name %>
</p>

<p>
  <strong>徒歩分数</strong>
  <%= station.time %>
</p>
<br>
<% end %>

<%= link_to '編集', edit_house_path(@house) %> |
<%= link_to '戻る', houses_path %>
