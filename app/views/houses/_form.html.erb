<%= form_with(model: house, local: true) do |form| %>
  <% if house.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(house.errors.count, "error") %> prohibited this house from being saved:</h2>

      <ul>
      <% house.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <h1>物件登録</h1>
    <div class="field">
      <%= form.label :name, "物件名" %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :rent,"賃料" %>
      <%= form.text_field :rent %>
    </div>

    <div class="field">
      <%= form.label :address, "住所"%>
      <%= form.text_field :address %>
    </div>

    <div class="field">
      <%= form.label :age, "築年数"%>
      <%= form.text_field :age %>
    </div>

    <div class="field">
      <%= form.label :note, "備考" %>
      <%= form.text_area :note %>
    </div>

    <%= form.fields_for :stations do |station| %>
    <h2>最寄駅<%= station.index + 1 %></h2>

    <div class="field">
      <%= station.label :route,"路線名" %>
      <%= station.text_field :route %>
    </div>

    <div class="field">
      <%= station.label :station_name,"駅名" %>
      <%= station.text_field :station_name %>
    </div>

    <div class="field">
      <%= station.label :time,"徒歩分数" %>
      <%= station.text_field :time %>
    </div>
  <% end %>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
